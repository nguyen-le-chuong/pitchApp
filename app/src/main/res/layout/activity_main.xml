<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Parameter Inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accelerater's Std: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000" />
            <Button
                android:id="@+id/minusAccelStd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/accelStdInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusAccelStd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gyroscope's Std: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusGyroStd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />

            <EditText
                android:id="@+id/gyroStdInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusGyroStd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accelerater's Bias: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusAccelBias"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/accelBiasInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusAccelBias"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gyroscope's Bias: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusGyroBias"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/gyroBiasInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal" 
                android:gravity="center"/>

            <Button
                android:id="@+id/plusGyroBias"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Velocity's Std: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusInitVelStd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/initVelStdInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusInitVelStd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cut-off frequency: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusCA"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/cAInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusCA"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Noise Covarience 2: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusNumR2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/numR2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusNumR2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Initial covarience matrix: "
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/minusCor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />
            <EditText
                android:id="@+id/corInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:gravity="center"/>

            <Button
                android:id="@+id/plusCor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>

        <!-- Reset Button -->
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Kalman Filter" />

        <!-- Results Display -->
        <TextView
            android:id="@+id/pitchValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch: 0.0"
            android:paddingTop="16dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/roadSlopeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Road Slope: 0.0"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/pitchMinusSlopeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch - Road Slope: 0.0"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textColor="#000000"/>

    </LinearLayout>
</ScrollView>

